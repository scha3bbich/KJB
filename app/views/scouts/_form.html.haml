= form_for @scout do |f|
  - if @scout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scout.errors.count, "error")} prohibited this scout from being saved:"
      %ul
        - @scout.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name, class: "form-control"
  .field
    = f.label :last_name
    = f.text_field :last_name, class: "form-control"
  .field
    = f.label :birthday
    = f.date_select :birthday, {}, class: "form-control"
  .field
    = f.label :tent
    = f.collection_select :tent_id, Tent.all, :id, :number, {} , class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
