:javascript
  var initInterCount = function() {
    console.log('init listener');
    $('.inter-sum-field').unbind('change');
    setTimeout(function() {
      $('.inter-sum-field').change(function() {
        var _interSum = 0.00;
        $('.inter-sum-field').each(function() {
           _interSum = _interSum + parseFloat($(this).val());
        });
        $('#inter-sum').text(_interSum);
        $('#inter-sum').append(' &euro;');
      });
    }, 400);
  }

  $('.new-booking-button').click(function() {
    console.log('new entry');
    initInterCount();
  });

  
