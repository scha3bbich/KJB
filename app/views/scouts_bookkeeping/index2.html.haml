.row
  .col-md-10
    .page-header
      %h1
        = t('pages.scouts_account.title')
        %small= session[:date]
  .col-md-2
    %br
    %br
    .btn-group
      = link_to "Export", scouts_bookkeeping_export_path, class: "btn btn-info"
 
%h3
  = t('pages.scouts_account.s_account_cash')
%br
%h4
  = t('booking.balance')
%h4
  = number_to_currency @s_account_cash_balance 

%table.table.table-bordered.table-condensed.table-hover
  %thead
    %tr
      %th 
        = t('booking.accounting_number')
      %th
        = t('booking.date')
      %th
        = t('booking.amount')
      %th
        = t('booking.note1')
      %th
        = t('booking.note2')
      %th
        = t('booking.created_by')
      %th
        = t('booking.remarks')

   
  %tbody
    - @bookings_cash.each do |c|
      %tr
        = form_for c do |f| 
          %td 
            = c.accounting_number
          %td 
            = c.date.to_formatted_s(:rfc822)
          %td 
            = number_to_currency c.amount
          %td 
            = c.note1
          %td 
            = c.note2
          %td 
            = c.created_by.name
          %td 
            = c.remarks

%br
%br

