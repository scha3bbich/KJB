= form_for @news do |f|
  - if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.collection_select :user_id, User.all, :id, :name, {}, class: 'form-control'
  .field
    = f.label :comment
    = f.text_area :comment, class: 'form-control'
  .actions
    .btn-group
      = f.submit 'Speichern', class: "btn btn-primary"
      = link_to "Zur√ºck", :back, class: "btn btn-default"

