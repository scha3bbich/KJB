%h4
  = t('pages.disbursement.new_disbursement')

= form_for @disbursement do |f|
  - if @disbursement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@disbursement.errors.count, "error")} prohibited this disbursement from being saved:"
      %ul
        - @disbursement.errors.full_messages.each do |msg|
          %li= msg
          
  .field
    = f.label t('pages.disbursement.account')
    = f.collection_select(:accounts, Account.all, :id, :name)
  .field
    = f.label t('pages.disbursement.amount')
    = f.text_field :amount
  .actions
    = f.submit t('buttons.save')
