%h4 new disbursement

= form_for @disbursement do |f|
  - if @disbursement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@disbursement.errors.count, "error")} prohibited this disbursement from being saved:"
      %ul
        - @disbursement.errors.full_messages.each do |msg|
          %li= msg
          
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :account
    = f.collection_select(:account_id, Account.all, :id, :name)
  .field
    = f.label :cleared
    = f.check_box :cleared
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :user
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
