= form_for @tent do |f|
  - if @tent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tent.errors.count, "error")} prohibited this tent from being saved:"
      %ul
        - @tent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
