= form_for @good do |f|
  - if @good.errors.any?
    #error_explanation
      %h2= "#{pluralize(@good.errors.count, "error")} prohibited this good from being saved:"
      %ul
        - @good.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.collection_select :type, Good.types, :to_s, lambda { |type| t('goods.'+type.to_s) }, {}, class: 'form-control'
  .field
    = f.label :price
    = f.text_field :price, class: 'form-control'
  .field
    = f.label :date
    = f.date_select :date, {}, class: 'form-control'
  .actions
    .btn-group
      = f.submit 'Speichern', class: "btn btn-primary"
      = link_to "Zur√ºck", :back, class: "btn btn-default"

