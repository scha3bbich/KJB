= form_for @good do |f|
  - if @good.errors.any?
    #error_explanation
      %h2= "#{pluralize(@good.errors.count, "error")} prohibited this good from being saved:"
      %ul
        - @good.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.collection_select :type, Good.types, :to_s, lambda { |type| t('goods.'+type.to_s) }
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
